<system>

    <memory_region name="guest_ram_1" size="0x10_000_000" page_size="0x200_000" />
    <memory_region name="guest_ram_2" size="0x10_000_000" page_size="0x200_000" />


    <memory_region name="serial" size="0x1_000" phys_addr="0x9000000" />

    <memory_region name="gic_vcpu" size="0x1_000" phys_addr="0x8040000" />

    <protection_domain name="VMM" priority="253">
        <program_image path="vmm.elf" />

        <map mr="guest_ram_1" vaddr="0x40000000" perms="rw" setvar_vaddr="guest_ram_vaddr" />
        <virtual_machine name="linux" id="0">

            <map mr="guest_ram_1" vaddr="0x40000000" perms="rwx" />

            <map mr="serial" vaddr="0x9000000" perms="rw" cached="false" />

            <map mr="gic_vcpu" vaddr="0x8010000" perms="rw" cached="false" />
        </virtual_machine>

        <irq irq="33" id="1" />
    </protection_domain>

    <protection_domain name="interf_VMM" priority="254">
        <program_image path="bare_vmm.elf" />

        <map mr="guest_ram_2" vaddr="0x40000000" perms="rw" setvar_vaddr="guest_ram_vaddr" />
        <virtual_machine name="barebones" id="0">

            <map mr="guest_ram_2" vaddr="0x40000000" perms="rwx" />

            <map mr="serial" vaddr="0xFF010000" perms="rw" cached="false" />

            <map mr="gic_vcpu" vaddr="0x8010000" perms="rw" cached="false" />
        </virtual_machine>

    </protection_domain>
</system>
