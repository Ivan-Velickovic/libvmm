/ {
    memory@40000000 {
        device_type = "memory";
        reg = <0x00 0x70000000 0x00 0x10000000>;
    };

    cpus {
        cpu@0 {
            /delete-property/ cpu-idle-states;
        };
        cpu@1 {
            /delete-property/ cpu-idle-states;
        };
        cpu@2 {
            /delete-property/ cpu-idle-states;
        };
        cpu@3 {
            /delete-property/ cpu-idle-states;
        };
    };

    soc@0 {
        bus@30800000 {
            spi@30820000 {
                status = "disabled";
            };

            spi@30830000 {
                status = "disabled";
            };

            spi@30840000 {
                status = "disabled";
            };

            ethernet@30be0000 {
                status = "okay";
            };

            mailbox@30aa0000 {
                status = "disabled";
            };

            mmc@30b40000 {
                status = "disabled";
            };

            mmc@30b50000 {
                status = "disabled";
            };

            spi@30bb0000 {
                status = "disabled";
            };

            i2c@30a20000 {
                status = "disabled";
            };

	     	serial@30a60000 {
                status = "disabled";
            };
        };

        bus@30000000 {
            gpio@30210000 {
                status = "okay";
            };

            gpio@30220000 {
                status = "okay";
            };

            gpio@30230000 {
                status = "okay";
            };

            gpio@30240000 {
                status = "okay";
            };

            watchdog@30280000 {
                status = "disabled";
            };

        };

        usb@38100000 {
            status = "disabled";
        };

        usb@38200000 {
            status = "disabled";
        };

        usb-phy@382f0040 {
            status = "disabled";
        };
    };

    chosen {
        stdout-path = "/soc@0/bus@30800000/serial@30860000";
        linux,initrd-start = <0x00000000 0x7c000000>;
        linux,initrd-end = <0x00000000 0x7e000000>;
        bootargs = "console=ttymxc0,115200 earlycon=ec_imx6q,0x30860000,115200 nosmp rw loglevel=8 debug initcall_blacklist=imx8_soc_init pci=nomsi earlyprintk=serial maxcpus=1";
    };
};
