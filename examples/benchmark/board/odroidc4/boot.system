<system>

    <memory_region name="guest_ram" size="0x10_000_000" page_size="0x200_000" />

    <memory_region name="serial" size="0x1_000" phys_addr="0xff803000" />
    <memory_region name="gic_vcpu" size="0x1_000" phys_addr="0xffc06000" />
    <memory_region name="timer" size="0x1_000" phys_addr="0xFF110000" />


    <protection_domain name="boot_VMM" priority="254" >
        <program_image path="bare_vmm.elf" />
        <map mr="serial" vaddr="0xff803000" perms="rw" cached="false" setvar_vaddr="uart_base"/>

        <map mr="guest_ram" vaddr="0x20000000" perms="rw" setvar_vaddr="guest_ram_vaddr" />
        <virtual_machine name="boot" id="0">


            <map mr="guest_ram" vaddr="0x20000000" perms="rwx" />

            <map mr="serial" vaddr="0xff803000" perms="rw" cached="false" />
            <map mr="timer" vaddr="0xFF110000" perms="rw" cached="false" />

            <map mr="gic_vcpu" vaddr="0xffc02000" perms="rw" cached="false" />
        </virtual_machine>

        <irq irq="225" id="1" trigger="edge" />
    </protection_domain>
</system>
